@model List<Feature>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">Öne Çıkan Rotalar Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Tur Rotası</th>
                    <th>Açıklama</th>
                    <th>Fiyat</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>                        
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-md pull-up"
                                    title="">
                                    <img src="@item.Image" alt="Avatar" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Description₺</td>
                        @{
                            if (item.Status == true)
                            {
                                <td><a href="/Admin/Feature/ChangeToPassive/@item.FeatureId" class="btn btn-outline-success">Pasif Yap</a></td>
                            }
                            else
                            {
                                <td><a href="/Admin/Feature/ChangeToActive/@item.FeatureId" class="btn btn-outline-secondary">Aktif Yap</a></td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <br />
    </div>
    <br />
</div>

